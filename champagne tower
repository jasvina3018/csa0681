def champagneTower(poured, query_row, query_glass):
    glasses = [[0] * k for k in range(1, 102)]
    glasses[0][0] = poured
    for i in range(100):
        for j in range(i + 1):
            q = (glasses[i][j] - 1) / 2.0
            if q > 0:
                glasses[i + 1][j] += q
                glasses[i + 1][j + 1] += q
    return min(1, glasses[query_row][query_glass])


